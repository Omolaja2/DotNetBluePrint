@model IEnumerable<DotNetBlueprint.Models.User>

@{
    ViewData["Title"] = "Studio Manager | Direct Access";
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-5 reveal-on-scroll">
        <div>
            <h1 class="display-5 fw-black title-gradient mb-0">Studio Architects</h1>
            <p class="text-muted">Monitoring the elite developers joining Blueprint Studio.</p>
        </div>
        <div class="stats-card p-3 px-4 rounded-pill border shadow-sm bg-white">
            <span class="text-muted small fw-bold text-uppercase ls-2">Total Architects</span>
            <div class="h3 fw-black mb-0 text-primary">@Model.Count()</div>
        </div>
    </div>

    <div class="card border-0 shadow-lg rounded-lg overflow-hidden reveal-on-scroll" style="border-radius: 30px;">
        <div class="table-responsive">
            <table class="table table-hover mb-0 align-middle">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4 border-0 py-4 text-muted small text-uppercase fw-bold">Architect ID</th>
                        <th class="border-0 py-4 text-muted small text-uppercase fw-bold">Email Address</th>
                        <th class="border-0 py-4 text-muted small text-uppercase fw-bold">Commission Date</th>
                        <th class="pe-4 border-0 py-4 text-end text-muted small text-uppercase fw-bold">Security Status</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td class="ps-4 py-4 fw-bold">#@user.Id.ToString("D4")</td>
                            <td class="py-4">
                                <div class="d-flex align-items-center gap-2">
                                    <div class="avatar-circle">@user.Email.Substring(0, 1).ToUpper()</div>
                                    <span class="fw-600">@user.Email</span>
                                </div>
                            </td>
                            <td class="py-4 text-muted">
                                <i class="bi bi-calendar3 me-2"></i>@user.CreatedAt.ToString("MMM dd, yyyy HH:mm")
                            </td>
                            <td class="pe-4 py-4 text-end">
                                <span class="badge rounded-pill bg-light text-success border border-success-subtle px-3 py-2">
                                    <i class="bi bi-shield-check me-1"></i> Verified
                                </span>
                            </td>
                        </tr>
                    }
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="4" class="text-center py-5">
                                <i class="bi bi-people display-1 text-muted opacity-25"></i>
                                <p class="text-muted mt-3">No architects have joined the forge yet.</p>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<style>
    .avatar-circle {
        width: 32px;
        height: 32px;
        background: var(--primary);
        color: #fff;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 800;
        font-size: 0.8rem;
    }
    .fw-600 { font-weight: 600; }
</style>
