@model ErrorViewModel
@{
    ViewData["Title"] = "System Notification";
}

<link rel="stylesheet" href="~/css/generator.css" />

<div class="container d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="premium-card text-center" style="max-width: 550px;">
        <div class="mb-4 d-flex justify-content-center">
            <div class="auth-logo-circle d-flex align-items-center justify-content-center" style="border-color: #dc3545; width: 80px; height: 80px;">
                <i class="bi bi-exclamation-triangle-fill" style="font-size: 2.5rem; color: #dc3545;"></i>
            </div>
        </div>
        
        <h1 class="title-gradient mb-3">Service Interruption</h1>
        <p class="text-muted mb-5">
            The studio encountered an unexpected coordinate shift. Our specialized engineers have been notified.
        </p>

        @if (Model.ShowRequestId)
        {
            <div class="user-pill p-3 mb-4 d-inline-block rounded-pill">
                <span class="small opacity-75">Trace ID: </span>
                <code class="fw-bold">@Model.RequestId</code>
            </div>
        }

        <div class="d-grid gap-3">
            <a asp-controller="Home" asp-action="Index" class="btn-premium text-decoration-none">
                RETURN TO LOBBY
            </a>
            <a href="mailto:support@blueprintstudio.com" class="text-decoration-none small text-muted">
                Contact Technical Support
            </a>
        </div>
    </div>
</div>
