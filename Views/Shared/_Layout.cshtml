<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Blueprint Studio</title>
    
    <!-- SEO & Social Sharing Tags -->
    <meta name="description" content="Blueprint Studio - The most sophisticated .NET scaffolding engine for professional developers.">
    <meta property="og:title" content="Blueprint Studio | Modern .NET Scaffolding">
    <meta property="og:description" content="Generate professional Clean Architecture, Microservices, and Layered solutions in seconds.">
    <meta property="og:image" content="~/images/main_logo.jpg">
    <meta property="og:type" content="website">
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:image" content="~/images/main_logo.jpg">

    <!-- Favicons -->
    <link rel="icon" type="image/png" href="/images/logo.png" asp-append-version="true" />
    <link rel="shortcut icon" href="/favicon.ico" asp-append-version="true" />
    <link rel="apple-touch-icon" href="/images/logo.png" asp-append-version="true" />

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/generator.css" asp-append-version="true" />
</head>
<body>
    <header class="sticky-top">
        <nav class="navbar navbar-expand-lg border-bottom px-3 px-md-5" style="background: rgba(250, 249, 246, 0.85); backdrop-filter: blur(12px); -webkit-backdrop-filter: blur(12px);">
            <div class="container-fluid p-0">
                <!-- Branding -->
                <a class="navbar-brand d-flex align-items-center" asp-controller="Home" asp-action="Index" style="color: var(--primary); letter-spacing: -0.5px;">
                    <div class="brand-icon-wrapper me-2">
                        <i class="bi bi-cpu-fill"></i>
                    </div>
                    <span class="fw-800 fs-4">Blueprint<span class="text-muted fw-400">Studio</span></span>
                </a>

                <!-- Desktop Nav Links -->
                <div class="d-none d-lg-flex align-items-center ms-auto gap-4">
                    <nav class="d-flex gap-4">
                        <a class="nav-link-modern @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Home" ? "active" : "")" asp-controller="Home" asp-action="Index">Home</a>
                        <a class="nav-link-modern @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Generator" && ViewContext.RouteData.Values["Action"]?.ToString() == "Create" ? "active" : "")" asp-controller="Generator" asp-action="Create">Studio</a>
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <a class="nav-link-modern @(ViewContext.RouteData.Values["Action"]?.ToString() == "History" ? "active" : "")" asp-controller="Generator" asp-action="History">History</a>
                        }
                    </nav>
                    
                    <div class="vr mx-1" style="height: 24px; opacity: 0.1;"></div>

                    <div class="d-flex align-items-center gap-3">
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <div class="user-pill d-flex align-items-center px-3 py-1 rounded-pill">
                                <i class="bi bi-person-circle me-2 opacity-75"></i>
                                <span class="small fw-600">@User.Identity.Name</span>
                            </div>
                            <a asp-controller="Management" asp-action="Users" class="nav-link-modern">
                                <i class="bi bi-shield-lock me-1"></i>Studio Manager
                            </a>
                            <a asp-controller="Auth" asp-action="Logout" class="btn-modern-outline">Logout</a>
                        }
                        else
                        {
                            <a asp-controller="Auth" asp-action="Login" class="nav-link-modern">Sign In</a>
                            <a asp-controller="Auth" asp-action="Register" class="btn-modern">Join Free</a>
                        }
                    </div>
                </div>

                <!-- Mobile Toggler -->
                <button class="navbar-toggler border-0 shadow-none p-0 ms-auto d-lg-none" type="button" data-bs-toggle="offcanvas" data-bs-target="#mobileMenu">
                    <i class="bi bi-list fs-1" style="color: var(--primary);"></i>
                </button>
            </div>
        </nav>
    </header>

    <!-- Mobile Sidebar (Offcanvas) -->
    <div class="offcanvas offcanvas-start d-lg-none" tabindex="-1" id="mobileMenu" style="background: var(--bg-light); width: 280px;">
        <div class="offcanvas-header border-bottom">
            <h5 class="offcanvas-title fw-bold" style="color: var(--primary);">
                <i class="bi bi-cpu-fill me-2"></i>Menu
            </h5>
            <button type="button" class="btn-close shadow-none" data-bs-dismiss="offcanvas" data-bs-target="#mobileMenu"></button>
        </div>
        <div class="offcanvas-body p-4">
            <nav>
                <ul class="nav flex-column gap-3">
                    <li class="nav-item">
                        <a class="nav-link text-main fw-600 p-0" asp-controller="Home" asp-action="Index">
                            <i class="bi bi-house-door me-2 text-primary"></i>Home
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-main fw-600 p-0" asp-controller="Generator" asp-action="Create">
                            <i class="bi bi-hammer me-2 text-primary"></i>Forging Studio
                        </a>
                    </li>
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <li class="nav-item">
                            <a class="nav-link text-main fw-600 p-0" asp-controller="Management" asp-action="Users">
                                <i class="bi bi-shield-lock me-2 text-primary"></i>Studio Manager
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-main fw-600 p-0" asp-controller="Generator" asp-action="History">
                                <i class="bi bi-collection me-2 text-primary"></i>My Blueprints
                            </a>
                        </li>
                        <li class="nav-item mt-4 pt-4 border-top">
                            <div class="small text-muted mb-2">Signed in as</div>
                            <div class="fw-bold text-main mb-3">@User.Identity.Name</div>
                            <a asp-controller="Auth" asp-action="Logout" class="btn btn-outline-danger w-100 rounded-pill">Logout</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item mt-4 pt-4 border-top">
                            <div class="d-grid gap-2">
                                <a asp-controller="Auth" asp-action="Login" class="btn btn-outline-primary rounded-pill">Login</a>
                                <a asp-controller="Auth" asp-action="Register" class="btn btn-primary rounded-pill" style="background: var(--primary); border: none;">Join Free</a>
                            </div>
                        </li>
                    }
                </ul>
            </nav>
        </div>
    </div>

    <!-- Global Loading Overlay -->
    <div id="globalLoading" class="loading-overlay">
        <div class="loading-content">
            <div class="loading-spinner"></div>
            <p id="loadingText" class="loading-text">Processing...</p>
            <p class="text-muted small">Please wait while we handle your request.</p>
        </div>
    </div>

    <div class="container-fluid px-2 px-md-4">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    @if (ViewData["HideFooter"] == null || !(bool)ViewData["HideFooter"])
    {
        <footer class="footer border-top text-muted pt-4 pb-4 mt-5">
            <div class="container text-center">
                <p class="mb-0">
                    &copy; 2026 - <span style="color: var(--primary); font-weight: 700;">Blueprint Studio</span> - Sophisticated .NET Scaffolding
                </p>
            </div>
        </footer>
    }
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script>
        function showLoading(text) {
            const overlay = document.getElementById('globalLoading');
            const textEl = document.getElementById('loadingText');
            if (overlay && textEl) {
                textEl.innerText = text || "Processing...";
                overlay.style.display = 'flex';
            }
        }
    </script>
</body>
</html>
