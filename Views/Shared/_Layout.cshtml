<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Blueprint Studio</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/generator.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-light border-bottom mb-3" style="background: rgba(253, 251, 249, 0.9); backdrop-filter: blur(10px);">
            <div class="container-fluid justify-content-center">
                <a class="navbar-brand fw-bold m-0" asp-area="" asp-controller="Home" asp-action="Index" style="color: var(--primary); font-size: 1.5rem;">
                    <i class="bi bi-cpu-fill me-2"></i>Blueprint Studio
                </a>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer border-top text-muted pt-4 pb-4 mt-5">
        <div class="container text-center">
            <p class="mb-0">
                &copy; 2026 - <span style="color: var(--primary); font-weight: 700;">Blueprint Studio</span> - Sophisticated .NET Scaffolding
            </p>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
