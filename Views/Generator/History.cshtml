@model List<DotNetBlueprint.Models.ProjectBlueprint>

@{
    ViewData["Title"] = "My Blueprints";
}

<div class="generator-container fade-in">
    <div class="premium-card">
        <div class="d-flex justify-content-between align-items-center mb-5">
            <div>
                <h1 class="title-gradient m-0">My Blueprints</h1>
                <p class="text-muted">Your history of generated architectures.</p>
            </div>
            <a asp-action="Create" class="btn btn-primary rounded-pill px-4" style="background: var(--primary); border: none;">
                <i class="bi bi-plus-lg me-2"></i>New Project
            </a>
        </div>

        @if (!Model.Any())
        {
            <div class="text-center py-5">
                <i class="bi bi-archive text-muted" style="font-size: 3rem;"></i>
                <p class="mt-3 text-muted">You haven't generated any blueprints yet.</p>
                <a asp-action="Create" class="btn btn-outline-primary rounded-pill mt-2">Start Building</a>
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="text-muted small text-uppercase">
                        <tr>
                            <th class="border-0">Project Name</th>
                            <th class="border-0">Architecture</th>
                            <th class="border-0">Framework</th>
                            <th class="border-0">Database</th>
                            <th class="border-0 text-end">Forged On</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="py-3">
                                    <div class="fw-bold text-main">@item.ProjectName</div>
                                </td>
                                <td>
                                    <span class="badge rounded-pill bg-light text-primary border px-3 py-2">@item.Architecture</span>
                                </td>
                                <td><span class="text-muted">.NET @item.DotNetVersion</span></td>
                                <td><span class="text-muted">@item.Database</span></td>
                                <td class="text-end text-muted small">@item.CreatedAt.ToString("MMM dd, yyyy")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>
