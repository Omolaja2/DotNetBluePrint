@{
    ViewData["Title"] = "DotNetBlueprint";
}

<link rel="stylesheet" href="~/css/generator.css" />

<div class="container text-center py-5 fade-in" style="margin-top: 15vh;">
    <h1 class="display-2 fw-bold mb-3 title-gradient">
        Build with Timeless Precision
    </h1>
    <p class="lead text-muted mb-5 fs-5" style="max-width: 600px; margin: 0 auto; line-height: 1.6;">
        The sophisticated scaffolding tool for .NET professionals. Generate industry-standard architectures with a warm, modern touch.
    </p>

    <div class="d-flex justify-content-center">
        <a asp-controller="Generator" asp-action="Create" class="generate-btn" style="max-width: 280px; text-decoration: none;">
            <span>Get Started Now</span>
            <i class="bi bi-arrow-right-short"></i>
        </a>
    </div>

    <div class="row mt-5 pt-5 g-4">
        <div class="col-md-4">
            <div class="p-4 rounded-4" style="background: var(--card-bg); border: 1px solid var(--border-color); box-shadow: var(--shadow-soft);">
                <div class="arch-icon mb-3"><i class="bi bi-check-circle-fill fs-2"></i></div>
                <h5 class="fw-bold">Pro Architectures</h5>
                <p class="small text-muted">Clean, Layered, Hexagonal, and more. All optimized for the modern .NET ecosystem.</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="p-4 rounded-4" style="background: var(--card-bg); border: 1px solid var(--border-color); box-shadow: var(--shadow-soft);">
                <div class="arch-icon mb-3"><i class="bi bi-lightning-charge-fill fs-2"></i></div>
                <h5 class="fw-bold">Instant Delivery</h5>
                <p class="small text-muted">Get a ready-to-build solution structure delivered directly to your workstation.</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="p-4 rounded-4" style="background: var(--card-bg); border: 1px solid var(--border-color); box-shadow: var(--shadow-soft);">
                <div class="arch-icon mb-3"><i class="bi bi-cpu-fill fs-2"></i></div>
                <h5 class="fw-bold">Modern Core</h5>
                <p class="small text-muted">Full support for .NET 6, 7, 8, 9, and progressive .NET 10 preview features.</p>
            </div>
        </div>
    </div>
</div>
