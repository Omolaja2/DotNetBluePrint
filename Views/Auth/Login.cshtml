@model DotNetBlueprint.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<div class="generator-container fade-in">
    <div class="premium-card" style="max-width: 450px; margin: 0 auto;">
        <h1 class="title-gradient text-center mb-4">Welcome Back</h1>
        <p class="text-center text-muted mb-5">Sign in to continue to Blueprint Studio.</p>

        <form asp-action="Login" method="post" onsubmit="showLoading('Authenticating...')">
            <div asp-validation-summary="ModelOnly" class="text-danger small mb-3"></div>
            
            <div class="form-group mb-4">
                <label asp-for="Email" class="form-label">Email Address</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                    <input asp-for="Email" class="form-control" placeholder="name@example.com" />
                </div>
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>

            <div class="form-group mb-4">
                <label asp-for="Password" class="form-label">Password</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-lock"></i></span>
                    <input asp-for="Password" class="form-control" placeholder="••••••••" />
                </div>
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>

            <button type="submit" class="btn-modern w-100 py-3 mb-4">
                <span>Sign In</span>
                <i class="bi bi-box-arrow-in-right"></i>
            </button>

            <p class="text-center text-muted small">
                Don't have an account? 
                <a asp-action="Register" style="color: var(--primary); font-weight: 600; text-decoration: none;">Create one</a>
            </p>
        </form>
    </div>
</div>
