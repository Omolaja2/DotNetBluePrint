@model DotNetBlueprint.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login";
    ViewData["HideFooter"] = true;
}

<div class="generator-container">
    <div class="hero-shapes">
        <div class="shape shape-1" style="opacity: 0.05;"></div>
        <div class="shape shape-2" style="opacity: 0.05;"></div>
    </div>

    <div class="auth-card mx-auto" style="max-width: 480px;">
        <div class="text-center mb-5">
            <div class="auth-logo-circle">
                <img src="/images/logo.png" alt="Blueprint Studio" />
            </div>
            <h1 class="title-gradient mb-2" style="font-size: 2.25rem;">Welcome Back</h1>
            <p class="text-muted">Sign in to your architectural workspace.</p>
        </div>

        <form asp-action="Login" method="post" onsubmit="showLoading('Verifying Identity...')">
            <div asp-validation-summary="ModelOnly" class="text-danger small mb-4 text-center"></div>
            
            <div class="form-group mb-4">
                <label asp-for="Email" class="form-label small fw-bold text-uppercase ls-1">Email Address</label>
                <div class="input-group auth-input-group">
                    <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                    <input asp-for="Email" class="form-control shadow-none" placeholder="architect@example.com" />
                </div>
                <span asp-validation-for="Email" class="text-danger small mt-1 d-block"></span>
            </div>

            <div class="form-group mb-5">
                <div class="d-flex justify-content-between">
                    <label asp-for="Password" class="form-label small fw-bold text-uppercase ls-1">Password</label>
                </div>
                <div class="input-group auth-input-group">
                    <span class="input-group-text"><i class="bi bi-lock"></i></span>
                    <input asp-for="Password" class="form-control shadow-none" type="password" placeholder="••••••••" />
                </div>
                <span asp-validation-for="Password" class="text-danger small mt-1 d-block"></span>
            </div>

            <button type="submit" class="btn-modern w-100 py-3 mb-4 fs-6 shadow">
                <span>AUTHENTICATE</span>
                <i class="bi bi-shield-check ms-2"></i>
            </button>

            <div class="text-center mt-3">
                <p class="text-muted small">
                    Don't have an account? 
                    <a asp-action="Register" class="text-primary fw-bold text-decoration-none border-bottom border-primary">Join the Studio</a>
                </p>
            </div>
        </form>
    </div>
</div>

<style>
    .ls-1 { letter-spacing: 1px; }
</style>
